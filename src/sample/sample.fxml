<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Label text="Правила грамматики"></Label>
      <TextArea fx:id="inputArea">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Label text="Нетерминальные символы"></Label>
      <TextArea fx:id="unterminalInputArea">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Label text="Терминальные символы"></Label>
      <TextArea fx:id="terminalInputArea">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Button fx:id="runButton" onMouseClicked="#runButtonClick" contentDisplay="TOP" mnemonicParsing="false" text="RUN" textAlignment="CENTER" />
      <Label fx:id="resultLabel" alignment="TOP_CENTER" text="" />
   </children>
</VBox>
